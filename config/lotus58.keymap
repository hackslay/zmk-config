		combo_f12 {
            timeout-ms = <25>;
            key-positions = <0 3>;
            bindings = <&kp F12>;
        };

        combo_ret {
            timeout-ms = <50>;
            key-positions = <43 54>;
            bindings = <&kp RET>;
        };
        
        combo_bspc {
            timeout-ms = <25>;
            key-positions = <16 17>;
            bindings = <&kp BSPC>;
        };

        combo_del {
            timeout-ms = <25>;
            key-positions = <15 16 17>;
            bindings = <&kp DEL>;
        };
